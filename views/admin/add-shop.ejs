<%- include('../includes/header.ejs') %> 
<link rel="stylesheet" href="/main.css">

</head>
<body>
    <%- include('../includes/navigation.ejs') %> 
    <div class="container">
        <% if(errorMessage && errorMessage.length > 0){ %>
            <div class='error-message'>
                <p><%= errorMessage %></p>
            </div>
        <% } %>
        <div class="card mt-5" style="width: 100%;">
            <h1 class="card-title m-1">Add Your Shop</h1>
            <div class="card-body">
                <form action="/admin/add-shop" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="inputAddress">Name of CoffeeShop *</label>
                        <input type="text" class="form-control" name="name" placeholder="name" value="<%= shop.name %>">
                        </div>
                    <div class="form-group">
                        <label for="inputAddress2">Image *</label><br/>
                        <input type="file" name="image">
                    </div>
                    <div class="form-group">
                        <label for="inputAddress2">Address *</label>
                        <input type="text" class="form-control" name="address" placeholder="address" value="<%= shop.address %>" >
                    </div>
                    <div class="form-group">
                        <label for="inputAddress2">Phone</label>
                        <input type="text"  class="form-control" name="phone" placeholder="phone" value="<%= shop.phone %>">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">About Shop *</label>
                        <textarea class="form-control" name="description" rows="5"><%= shop.description %></textarea>
                    </div>
                    <button type="submit" class="btn btn-lg btn-outline-secondary">Add Shop</button>
                </form>
            </div>
        </div>
    </div>
<%- include('../includes/footer.ejs') %> 