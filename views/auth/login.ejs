<%- include('../includes/header.ejs') %> 
<link rel="stylesheet" href="/main.css">

</head>
<body>
    <%- include('../includes/navigation.ejs') %> 
    <div class="container">
        <% if(errorMessage && errorMessage.length > 0){ %>
            <div  class='error-message'>
                <p><%= errorMessage %></p>
            </div>
        <% } %>
        <div class="card mt-5" style="width: 100%;">
            <h1 class="card-title m-1 title-color"><i class="fas fa-user"></i> Login</h1>
            <p>Sign into Your Account</p>
            <div class="card-body">
                <form action="/login" method="POST">
                    <div class="form-group">
                        <label for="inputAddress"><i class="far fa-envelope"></i> Email</label>
                        <input 
                            type="email" 
                            class="form-control <%= validationErrs.find(e => e.param === 'email') ? 'invalid-input' : '' %>" 
                            name="email" 
                            placeholder="email" 
                            value="<%= oldInput.email %>"
                        >
                        </div>
                    <div class="form-group">
                        <label for="inputAddress2"><i class="fas fa-lock"></i> Password</label>
                        <input 
                            type="password" 
                            class="form-control <%= validationErrs.find(e => e.param === 'password') ? 'invalid-input' : '' %>" 
                            name="password" 
                            placeholder="password" 
                            value="<%= oldInput.password %>"
                        >
                    </div>
                    <button type="submit" class="btn btn-lg btn-outline-secondary">Login</button>
                </form>
                <div>
                <a style="color: grey" href="/reset">Reset Password</a>
                </div>
            </div>
        </div>
    </div>
<%- include('../includes/footer.ejs') %> 